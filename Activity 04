using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace A4
{
    internal class Program
    {
        class VendingKiosk
        {
            static int[] denominations = { 1000, 500, 200, 100, 50, 20, 10, 5, 1 };
            static decimal[] coins = { 0.25m, 0.10m, 0.05m };
            static void Main()
            {
                Console.OutputEncoding = System.Text.Encoding.UTF8;
                Console.Write("Enter amount due: ");
                decimal amountDue = Convert.ToDecimal(Console.ReadLine());

                Console.Write("Enter amount paid: ");
                decimal amountPaid = Convert.ToDecimal(Console.ReadLine());


                if (amountPaid < amountDue)
                {
                    Console.WriteLine("Error. Please input amount paid greater than amount due.");
                    return;
                }

                decimal change = amountPaid - amountDue;
                if (change == 0)
                {
                    Console.WriteLine("Exact payment, no change.");
                }
                Console.WriteLine($"Returned change: {change}");
                MakeChange(change);
            }
            static int[] MakeChange(decimal change)
            {
                int cents = (int)(change * 100);
                int[] result = new int[denominations.Length + coins.Length];
                int i = 0;

                Console.WriteLine();
                Console.WriteLine("Denomination       Peices");
                foreach (int deno in denominations)
                {
                    int count = cents / (deno * 100);
                    if (count > 0) Console.WriteLine($"₱{deno, -20}{count}");
                    result[i++] = count;
                    cents %= deno * 100;
                }

                foreach (decimal coin in coins)
                {
                    int count = cents / (int)(coin * 100);
                    if (count > 0) Console.WriteLine($"₱{coin, -20:F2}{count}");
                    result[i++] = count;
                    cents %= (int)(coin * 100);
                }
                return result;
            }
        }
    }
}
